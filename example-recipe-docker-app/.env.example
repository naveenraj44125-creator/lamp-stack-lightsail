# Recipe Manager Environment Variables

# Application
APP_ENV=production
UPLOAD_MAX_SIZE=5242880  # 5MB in bytes

# Database
DB_HOST=db
DB_NAME=recipe_db
DB_USER=recipe_user
DB_PASSWORD=CHANGE_ME_secure_password
DB_ROOT_PASSWORD=CHANGE_ME_root_password

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# AWS Lightsail Bucket
BUCKET_NAME=recipe-images-bucket
AWS_REGION=us-east-1

# Note: AWS credentials are provided automatically via IAM instance profile
# No need to set AWS_ACCESS_KEY_ID or AWS_SECRET_ACCESS_KEY
