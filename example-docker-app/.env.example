# Docker LAMP Stack Environment Variables
# Copy this file to .env and customize for your environment

# Application Settings
APP_ENV=production
APP_DEBUG=false

# Database Configuration
DB_HOST=db
DB_NAME=docker_app
DB_USER=app_user
DB_PASSWORD=secure_password
DB_ROOT_PASSWORD=root_password

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# phpMyAdmin Configuration
PMA_HOST=db
PMA_USER=app_user
PMA_PASSWORD=secure_password

# Optional: Custom Ports (if default ports are in use)
# WEB_PORT=8000
# DB_PORT=3307
# REDIS_PORT=6380
# PHPMYADMIN_PORT=8081
